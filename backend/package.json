{
  "name": "micro-backend",
  "version": "1.0.0",
  "description": "Backend for Micro",
  "main": "dist/index.js",
  "scripts": {
    "build": "tsc --build",
    "clean": "tsc --build --clean",
    "dev": "ts-node ./src/index.ts",
    "dev-b": "yarn build && node ./dist/index.js",
    "dev-pm2": "yarn build && pm2 startOrReload ecosystem.config.js --only micro-server-dev",
    "prod": "yarn build && pm2 startOrReload ecosystem.config.js --only micro-server-prod",
    "test": "yarn build && node ./dist/index.js --env test",
    "auto-update": "git reset --hard HEAD && git clean -df && git pull && yarn install && yarn run prod && pm2 stop micro-server-prod"
  },
  "repository": "https://github.com/edazpotato/Micro",
  "license": "GPL-3.0",
  "private": false,
  "dependencies": {
    "@types/centra": "^2.2.0",
    "@types/cors": "^2.8.12",
    "@types/date-and-time": "^0.13.0",
    "@types/express": "^4.17.13",
    "@types/jsonwebtoken": "^8.5.5",
    "@types/node": "^16.7.9",
    "@types/request-ip": "^0.0.37",
    "@types/shelljs": "^0.8.10",
    "argon2": "^0.28.2",
    "body-parser": "^1.19.0",
    "centra": "^2.5.0",
    "cors": "^2.8.5",
    "crypto": "^1.0.1",
    "date-and-time": "^2.0.0",
    "dotenv": "^10.0.0",
    "express": "^4.17.1",
    "jsonwebtoken": "^8.5.1",
    "mongoose": "^6.0.3",
    "nodejs-snowflake": "^1.6.2",
    "platform-folders": "^0.5.4",
    "request-ip": "^2.1.3",
    "shelljs": "^0.8.5",
    "ts-node": "^10.2.1",
    "typescript": "^4.4.2"
  }
}
